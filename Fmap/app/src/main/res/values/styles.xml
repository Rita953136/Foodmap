<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavActiveIndicator">
        <item name="android:color">#404040</item>
        <item name="android:shape">rectangle</item>
        <item name="android:radius">16dp</item> <!-- 圓角程度 -->
    </style>
    <style name="NavigationViewCheckText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
        <!-- Base application theme. -->
        <style name="Theme.Fmap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- ... your other theme attributes ... -->

            <!-- ✨ Add this style for the BottomSheet -->
            <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        </style>

        <!-- ✨ Define the BottomSheet style -->
        <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        </style>

        <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
            <item name="android:background">@android:color/transparent</item>
        </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <!-- 亮起的星星顏色 -->
        <item name="colorControlActivated">#FFC107</item> <!-- 這是橘黃色 -->
        <!-- 未亮起的星星顏色 -->
        <item name="colorControlNormal">#BDBDBD</item>    <!-- 這是灰色 -->
    </style>

</resources>