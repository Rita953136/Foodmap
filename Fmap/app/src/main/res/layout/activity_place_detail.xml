<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 拖曳小橫條 -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bottom_sheet_drag_handle" />

        <!-- 頂部大圖 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgThumb"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@color/material_dynamic_neutral90"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- 店家資訊 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp">

            <!-- 店名 -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="拾飯 日式料理・丼飯・壽司・刺身" />

            <!-- 評分 -->
            <LinearLayout
                android:id="@+id/layoutRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    tools:rating="4.6" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="4.6" />
            </LinearLayout>

            <!-- 標籤區：自動換行 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="6dp"
                app:singleLine="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- 簡介 -->
            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#8A8A8E"
                android:textSize="14sp"
                tools:text="壽司店・可外送" />

            <!-- 價位 -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#8A8A8E"
                android:textSize="14sp"
                tools:text="$200–$400" />
        </LinearLayout>

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#E5E5EA" />

        <!-- 地址 + 電話 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:id="@+id/rowAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#8A8A8E"
                    android:src="@android:drawable/ic_menu_mylocation" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="台中市西屯區某某路 123 號" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#8A8A8E"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="04-2252-6038" />
            </LinearLayout>
        </LinearLayout>
        <!-- ✅ 營業時間（可展開/收合） -->
        <LinearLayout
            android:id="@+id/rowHoursHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#8A8A8E"
                android:src="@android:drawable/ic_menu_recent_history" />

            <!-- 一行摘要（例如：今日營業時間） -->
            <TextView
                android:id="@+id/tvHoursSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="今天：11:00–14:00、17:00–21:00" />

            <!-- 展開箭頭 -->
            <ImageView
                android:id="@+id/ivHoursChevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="0"
                android:tint="#8A8A8E"
                android:src="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <!-- 展開後的明細列表（程式動態塞入每日時段） -->
        <LinearLayout
            android:id="@+id/hoursContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="52dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- 內容會用程式動態新增 TextView；這裡放一個預覽 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="週一　11:00–14:00、17:00–21:00" />
        </LinearLayout>

        <!-- 功能按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHeart"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:icon="@drawable/outline_favorite_24"
                app:iconTint="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:icon="@drawable/outline_map_search_24"
                app:iconTint="@color/black" />
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="6dp"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>
</ScrollView>
